                groupCard.innerHTML = `
                    <div class="group-header" onclick="toggleGroup('${index}')">
                        <div class="group-info">
                            <h2>${groupName}</h2>
                            <div class="group-pattern">${groupData.pattern}</div>
                            <div class="group-count">${verbCount} ${countText}</div>
                        </div>
                        <div id="chevron-${index}">${createChevronSVG()}</div>
