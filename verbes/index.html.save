        function toggleGroup(groupName) {
            const content = document.getElementById(`content-${groupName}`);
            const chevron = document.getElementById(`chevron-${groupName}`);

            if (content.classList.contains('expanded')) {
                content.classList.remove('expanded');
                chevron.classList.remove('rotated');
            } else {
                content.classList.add('expanded');
                chevron.classList.add('rotated');
            }
        }

        function renderVerbGroups() {
            const container = document.getElementById('verbGroups');

            Object.entries(verbGroups).forEach(([groupName, groupData], index) => {
                const groupCard = document.createElement('div');
