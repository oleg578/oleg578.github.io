            const bigGroups = Object.values(verbGroups).filter(group => group.verbs.length > 3).length;
            const uniqueGroups = Object.values(verbGroups).filter(group => group.verbs.length === 1).length;

            document.getElementById('groupsCount').textContent = totalGroups;
